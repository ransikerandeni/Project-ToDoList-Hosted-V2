<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="styles/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Caveat&family=Libre+Baskerville&family=Lobster&family=Mooli&display=swap"
        rel="stylesheet" />
    <title>ToDo List</title>
</head>

<body>
    <div class="container">
        <header class="d-flex justify-content-center py-3">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a href="/" class="nav-link" style="color: #c70039; background-color: #141e46"
                        aria-current="page">My Todo</a>
                </li>
                <li class="nav-item">
                    <a href="/workToDo" class="nav-link" style="color: #c70039">Work ToDo</a>
                </li>
            </ul>
        </header>
    </div>
    <div class="container">
        <h1 class="firstH1Heading">Welcome to my ToDo List</h1>
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>
    </div>
    <div class="container floatingBox">
        <% if(locals.displayItems.length) { %>
            <% displayItems.forEach((item)=> { %>

                <form action="/delete" method="post">
                    <div class="form-check">
                        <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()"
                            class="form-check-input" id="checkBox" />
                        <label class="form-check-label">
                            <%= item.name %>
                        </label>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>"/>
                </form>

                <% }); %>
                    <% } else { %>
                        <p>ToDo List is Empty</p>
                        <% } %>

                            <form action="/" method="post" class="formAreaClass">
                                <input type="text" id="inputField1" name="inputField1" placeholder="Add a task" />
                                <!-- <input type="submit" name="list" class="submitButton1"
                                    value="<%= listTitle %>">+</input> -->
                                    <button type="submit" name="list" class="submitButton1" value="<%= listTitle %>">+</button>
                            </form>
    </div>
    <footer class="footer">By Ransike 2023</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>